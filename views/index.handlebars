<h1>Eat-Da-Burger!</h1>

<div id="not-eaten-burgers">
  <h2>Burgers Available to be Eaten</h2>

  <ol>
    {{#each burgers}}
      {{#unless eaten}}
        <li>
          {{name}}
          <button class="eat-burger" data-id="{{id}}" data-eaten="{{eaten}}">Eat Me</button>
        </li>
      {{/unless}}
    {{/each}}
  </ol>
</div>

<div id="eaten-burgers">
  <h2>Burgers That Are No More</h2>

  <ol>
    {{#each burgers}}
      {{#if eaten}}
        <li>
          {{name}}
        </li>
      {{/if}}
    {{/each}}
  </ol>
</div>

<div id="form-section">
  <h2>Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="bg">Burger Name:</label>
      <input type="text" id="bg" name="name">
    </div>

    <button type="submit" id="makeburger">Add Burger</button>
  </form>
</div>